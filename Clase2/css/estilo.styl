azul = #22BCE0
gris_oscuro = #444
naranja = #DD4F24

body
    background #E8E8E8	
    color gris_oscuro
    font-family Arial
    font-size 16px
    
header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative
	/*la sombra del NAV se la pongo al header porque cae sobre el nav al desplazarse hacia abajo.*/
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1

	
	.logo
		border-right 1px solid azul
		width 60px
		
		img
			width 52px
	
	.titular
		margin 0 60px 0 70px
		
		.filtro
			color azul
			font-size 14px
			text-decoration none
			font-weight bold
			font-style italic
			
		.publicar
			background naranja
			color white
			float right
			font-style italic
			text-decoration none
			margin -3px 1em 0 0
			padding 0.2em 0.5em
			text-shadow 1px 1px 0px	black

			

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
			
	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2

			img
				width 50px
				border-radius 50%	
	.flechita
		background naranja
		color white
		display block
		padding 3px
		position absolute
		top 15px
		right 0px
		text-align right
		width 50%
		
	
nav
	background azul
	border-left 15px solid white
	position relative /* necesaria si abajo uso absolute */

	&:before 
		/*flecha creada con bordes*/
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent	
		content "" /* contenido vacio debe ir*/
		left 0
		position absolute
		top 0

	.menu
		
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto /* none para no ver el sctoll */
		white-space nowrap
		
		li
			display inline-block
			
			a
				color white
				display inline-block
				margin 0 0.5em
				padding 0.3em
				text-decoration none
				
				
	
.left
	float left
	
.right
	float right
	
	
