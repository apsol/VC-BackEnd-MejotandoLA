azul = #22BCE0
gris_oscuro = #444
gris_texto = #7A7A7A
naranja = #DD4F24


body
    background #E8E8E8	
    color gris_oscuro
    font-family Arial
    font-size 16px
    
footer
	background naranja
	bottom 0
	color rgba(white, 0.5)
	text-align center
	position absolute
	width 100%
	
	h3
		font-size 14px
		font-weight normal
		
		strong
			display block
		/* no me anda*/	
		.mejor
			&:after
			&:before
				content " - "			
			
header
	background gris_oscuro
	color white
	overflow hidden
	padding 0.5em
	position relative
	/*la sombra del NAV se la pongo al header porque cae sobre el nav al desplazarse hacia abajo.*/
	box-shadow 0 5px 0 rgba(0,0,0,0.2)
	z-index 1

	
	.logo
		border-right 1px solid azul
		width 60px
		
		img
			width 52px
	
	.titular
		margin 0 60px 0 70px
		
		.filtro
			color azul
			font-size 14px
			text-decoration none
			font-weight bold
			font-style italic
			
		.publicar
			background naranja
			color white
			float right
			font-style italic
			text-decoration none
			margin -3px 1em 0 0
			padding 0.2em 0.5em
			text-shadow 1px 1px 0px	black
			
			&:before
				display inline-block /* necesarios para usar margenes despues */
				font-family "iconitos"
				content "\e908"
				margin 0 3px	0 0

		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0
			
	.usuario
		position absolute
		right 10px
		top 10px
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 2

			img
				width 50px
				border-radius 50%	
	.flechita
		background naranja
		color white
		display block
		padding 3px
		position absolute
		top 15px
		right 0px
		text-align right
		text-decoration none
		width 50%
		
		&:after 
			font-family "iconitos"
			display inline-block
			content "\e600"
			text-shadow 1px 1px 0px black
		
	
nav
	background azul
	border-left 15px solid white
	position relative /* necesaria si abajo uso absolute */

	&:before 
		/*flecha creada con bordes*/
		border-bottom 20px solid transparent
		border-left 7px solid white
		border-top 20px solid transparent	
		content "" /* contenido vacio debe ir*/
		left 0
		position absolute
		top 0

	.menu
		
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto /* none para no ver el sctoll */
		white-space nowrap
		
		li
			display inline-block
			
			a
				color white
				display inline-block
				margin 0 0.5em
				padding 0.3em
				text-decoration none
				
.posts
	padding 0.5em
	
	a
		color naranja

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color gris_texto
		margin-bottom 0.5em
		
		/* Para la parte inferior del Article */
		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden /* fundamental para que el contenedor se adapte al tamanio del  texto ,  sililar al clar:boot */
			.datos
				float left
				
				.comentarios
					background gris_texto
					border-radius 3px
					color white
					margin 0 1em 0 0
					padding 2px 5px
					text-decoration none
					
				.estrellita
					text-decoration none
					
					&:before
						font-family "iconitos"
						color #E0E561
						content "\e9d9"

			.votos
				float right
				line-height 1.5em
				/* aplico herencia a CSS  para las clases DOWN y UP */
				.down 
				.up  
					text-decoration none
					font-size 1.5em
				.down
					color red
					&:before
						font-family "iconitos"
						content "\e600"	
						vertical-align bottom
				.up
					color green
					&:before
						font-family "iconitos"
						content "\e601"
						vertical-align bottom

			/* Para la parte superior del Article */
		.descripcion
			color gris_texto
			
			.acciones
				border-top 3px solid azul
				
			.detalles
				height 160px
				margin-left 130px
				
				.autor
					margin 0.5em 0 0.5em 0
				
				.fecha
					float right
					margin 0 1em 0 0

				.tag 
					background azul
					border-radius 0.5em
					color white
					padding 0.2em 0.5em
					text-decoration none

				.titulo
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0 /* todos los contenedores H tienen margen por defecto, en ocaciones hay que sacarlos. Aparece cuando se usa Float left en la imagen u otra cosa */
					padding 0.5em 0.5em 0 0
			.imagen
				float left
				
				img
					height 160px
					vertical-align top
					width 120px
				
